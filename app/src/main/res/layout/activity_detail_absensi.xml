<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray5"
    android:theme="@style/CustomTheme"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="id.exomatik.absenasn.ui.main.admin.sudahAbsen.detailAbsensi.DetailAbsensiActivity"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/h2"
            android:layout_marginBottom="@dimen/h1"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/black"
            android:textSize="@dimen/text_h2"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardMain"
            style="@style/cardView"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/h2"
            android:layout_below="@+id/textStatus"
            >
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/h2"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                >
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgFoto"
                    android:layout_width="@dimen/_150"
                    android:layout_height="@dimen/_150"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="@dimen/h2"
                    android:padding="@dimen/h2"
                    android:scaleType="fitCenter"
                    android:src="@drawable/ic_logo"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fontFamily="@font/roboto_regular"
                    android:textSize="@dimen/text_h3"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="@dimen/h1"
                    android:id="@+id/textNama"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fontFamily="@font/roboto_regular"
                    android:textSize="@dimen/text_h3"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/h1"
                    android:id="@+id/textUsernamePhone"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fontFamily="@font/roboto_regular"
                    android:textSize="@dimen/text_h3"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/h1"
                    android:id="@+id/textJenisAbsenJam"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:fontFamily="@font/roboto_regular"
                    android:textSize="@dimen/text_h3"
                    android:textColor="@color/black"
                    android:id="@+id/textStatusAbsen"
                    android:layout_marginTop="@dimen/h1"
                    />

                <com.google.android.gms.maps.MapView
                    android:id="@+id/mapView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_250"
                    android:layout_margin="@dimen/h2"
                    android:layout_marginTop="@dimen/h3"
                    android:apiKey="@string/google_maps_key" />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnTolak"
            style="@style/buttonStandardRed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardMain"
            android:drawableStart="@drawable/ic_false_white"
            android:drawablePadding="@dimen/h2"
            android:layout_margin="@dimen/h3"
            android:padding="@dimen/h3"
            android:text="@string/tolak"
            android:textColor="@color/white"
            android:visibility="gone"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnKonfirmasi"
            style="@style/buttonStandardGreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cardMain"
            android:layout_alignParentEnd="true"
            android:drawableStart="@drawable/ic_true_white"
            android:drawablePadding="@dimen/h2"
            android:layout_margin="@dimen/h3"
            android:padding="@dimen/h3"
            android:text="@string/konfirmasi"
            android:textColor="@color/white"
            android:visibility="gone"
            />
        <include
            android:id="@+id/progress"
            layout="@layout/progress_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/h2"
            android:visibility="gone"
            />
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>