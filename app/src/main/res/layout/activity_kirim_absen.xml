<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray5"
    android:theme="@style/CustomStyle"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context="id.exomatik.absenasn.ui.main.pegawai.kirimAbsen.KirimAbsenActivity"
    >

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/textStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/h2"
        android:layout_marginBottom="@dimen/h1"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/black"
        android:textSize="@dimen/text_h2"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardInput"
        style="@style/cardView"
        android:layout_centerHorizontal="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/h2"
        android:layout_below="@+id/textStatus"
        >
        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/textJenisAbsen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/h3"
                android:layout_marginBottom="@dimen/h2"
                android:fontFamily="@font/roboto_regular"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/text_h4"
                android:textStyle="bold" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/etUsername"
                style="@style/customEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/h2"
                android:hint="@string/username"
                android:textColorHint="@color/gray2"
                android:enabled="false"
                >
                <com.google.android.material.textfield.TextInputEditText
                    style="@style/textStandardWhite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableStart="@drawable/ic_username_gray"
                    android:drawablePadding="@dimen/h2"
                    android:imeOptions="actionNext"
                    android:inputType="textCapSentences"
                    android:maxLines="1"
                    android:textAlignment="textStart"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_h3"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardFoto"
                style="@style/cardView"
                android:layout_gravity="center"
                android:layout_width="@dimen/_150"
                android:layout_height="@dimen/_200"
                android:layout_marginTop="@dimen/h2"
                android:layout_marginBottom="@dimen/h5"
                >
                <androidx.appcompat.widget.LinearLayoutCompat
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    >
                    <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_150"
                        android:layout_height="@dimen/_160"
                        android:background="@color/gray12"
                        android:src="@drawable/ic_camera_white"
                        android:id="@+id/imgFoto"
                        android:scaleType="centerCrop"
                        />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/black"
                        android:text="@string/foto"
                        android:layout_marginTop="@dimen/h2"
                        />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.cardview.widget.CardView>


            <include layout="@layout/progress_loading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/progress"
                android:layout_gravity="center_horizontal"
                android:visibility="gone"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnAbsen"
        style="@style/buttonStandardGreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cardInput"
        android:layout_alignParentEnd="true"
        android:drawableEnd="@drawable/ic_send_white"
        android:drawablePadding="@dimen/h2"
        android:layout_margin="@dimen/h2"
        android:paddingTop="@dimen/h3"
        android:paddingBottom="@dimen/h3"
        android:paddingStart="@dimen/h5"
        android:paddingEnd="@dimen/h5"
        android:text="@string/kirim"
        android:textColor="@color/white"
        android:enabled="false"
        />
</RelativeLayout>