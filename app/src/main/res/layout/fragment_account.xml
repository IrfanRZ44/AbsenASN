<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="id.exomatik.absenki.ui.main.account.AccountFragment">

    <data>

        <variable
            name="viewModel"
            type="id.exomatik.absenki.ui.main.account.AccountViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:theme="@style/CustomStyle">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_200"
            android:scaleType="centerInside"
            android:src="@drawable/radius_green" />

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/h5"
            android:layout_marginTop="@dimen/margin_large"
            android:layout_marginEnd="@dimen/h5"
            android:layout_marginBottom="@dimen/margin_large">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardFoto"
                style="@style/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="@dimen/h2">

                <androidx.appcompat.widget.LinearLayoutCompat
                    snackbar="@{viewModel.message}"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/h2"
                    android:paddingEnd="@dimen/h2">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/imgFoto"
                        imageSrc="@{viewModel.dataUser.fotoProfil}"
                        android:layout_width="@dimen/_100"
                        android:layout_height="@dimen/_100"
                        android:layout_marginTop="@dimen/h3"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_launcher" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/textPoin"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/h2"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@={viewModel.dataUser.username}"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_h2" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/textRupiah"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_regular"
                        android:text="@={viewModel.dataUser.phone}"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_h2" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="@dimen/h2"
                        android:layout_marginTop="@dimen/h3"
                        android:layout_marginEnd="@dimen/h2"
                        android:layout_marginBottom="@dimen/h2"
                        android:background="@color/gray1" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textPengaturan"
                            style="@style/textStandardWhite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="@dimen/h2"
                            android:layout_marginTop="@dimen/h2"
                            android:layout_marginEnd="@dimen/h2"
                            android:layout_marginBottom="@dimen/h2"
                            android:fontFamily="@font/roboto_regular"
                            android:text="@string/pengaturan"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_h3" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnEditProfil"
                            disableButton="@{viewModel.isShowLoading}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textPengaturan"
                            android:layout_marginStart="@dimen/h2"
                            android:layout_marginEnd="@dimen/h2"
                            android:background="@drawable/btn_box_gray"
                            android:drawableTop="@drawable/ic_edit_black"
                            android:drawablePadding="@dimen/h2"
                            android:onClick="@{()-> viewModel.onClickEditProfil()}"
                            android:text="@string/edit_profil"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_h2" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnEditPassword"
                            disableButton="@{viewModel.isShowLoading}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textPengaturan"
                            android:layout_marginStart="@dimen/h2"
                            android:layout_marginEnd="@dimen/h2"
                            android:layout_toEndOf="@+id/btnEditProfil"
                            android:background="@drawable/btn_box_gray"
                            android:drawableTop="@drawable/ic_password_black"
                            android:drawablePadding="@dimen/h2"
                            android:onClick="@{()-> viewModel.onClickEditPassword()}"
                            android:text="@string/edit_password"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_h2" />

                    </RelativeLayout>

                    <View
                        android:id="@+id/viewGarisHeader"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginStart="@dimen/h2"
                        android:layout_marginTop="@dimen/h3"
                        android:layout_marginEnd="@dimen/h2"
                        android:layout_marginBottom="@dimen/h2"
                        android:background="@color/gray1" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/textInfo"
                            style="@style/textStandardWhite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginStart="@dimen/h2"
                            android:layout_marginTop="@dimen/h2"
                            android:layout_marginEnd="@dimen/h2"
                            android:layout_marginBottom="@dimen/h2"
                            android:fontFamily="@font/roboto_regular"
                            android:text="@string/informasi_lainnya"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_h3" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnAccount"
                            disableButton="@{viewModel.isShowLoading}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textInfo"
                            android:layout_marginStart="@dimen/h2"
                            android:layout_marginEnd="@dimen/h2"
                            android:background="@drawable/btn_box_gray"
                            android:drawableTop="@drawable/ic_info_black"
                            android:drawablePadding="@dimen/h2"
                            android:onClick="@{()-> viewModel.onClickProfil()}"
                            android:text="@string/tentang_aplikasi"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_h2" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnRate"
                            disableButton="@{viewModel.isShowLoading}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toEndOf="@+id/btnAccount"
                            android:layout_below="@+id/textInfo"
                            android:layout_marginStart="@dimen/h2"
                            android:layout_marginEnd="@dimen/h2"
                            android:background="@drawable/btn_box_gray"
                            android:drawableTop="@drawable/ic_rate_black"
                            android:drawablePadding="@dimen/h2"
                            android:onClick="@{()-> viewModel.onClickRating()}"
                            android:text="@string/nilai_aplikasi"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_h2" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btnLogout"
                            disableButton="@{viewModel.isShowLoading}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textInfo"
                            android:layout_toEndOf="@+id/btnRate"
                            android:background="@drawable/btn_box_gray"
                            android:drawableTop="@drawable/ic_logout_black"
                            android:drawablePadding="@dimen/h2"
                            android:onClick="@{()-> viewModel.onClickLogout()}"
                            android:paddingStart="@dimen/h2"
                            android:paddingEnd="@dimen/h2"
                            android:text="@string/keluar"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_h2" />
                    </RelativeLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_large" />
                </androidx.appcompat.widget.LinearLayoutCompat>
            </androidx.cardview.widget.CardView>
        </androidx.core.widget.NestedScrollView>

        <include
            android:id="@+id/progress"
            layout="@layout/progress_loading"
            visible="@{viewModel.isShowLoading}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone" />
    </RelativeLayout>
</layout>