<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="com.exomatik.ballighadmin.ui.main.profile.ld.AdminLihatProfileLDFragment">

    <data>
        <variable
            name="viewModel"
            type="com.exomatik.ballighadmin.ui.main.profile.ld.AdminLihatProfileLDViewModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:theme="@style/CustomTheme">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                snackbar="@{viewModel.message}"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/rlProfile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/rlSampul"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.santalu.autoviewpager.AutoViewPager
                            android:id="@+id/viewPagerLd"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_250"
                            android:overScrollMode="never"
                            android:src="@drawable/ic_camera_white"
                            app:avp_autoScroll="false"
                            app:avp_indeterminate="false"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
                            android:id="@+id/dotsIndicatorLd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/h2"
                            app:dotsColor="@color/white"
                            app:dotsCornerRadius="@dimen/h2"
                            app:dotsSize="@dimen/h4"
                            app:dotsSpacing="@dimen/h1"
                            app:dotsStrokeColor="@color/white"
                            app:dotsStrokeWidth="2dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            app:selectedDotColor="@color/colorAccent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/nameLd"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rlSampul"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="@dimen/h2"
                        android:layout_marginTop="@dimen/h5"
                        android:layout_toStartOf="@+id/cardImageLd"
                        android:text="@={viewModel.namaLembaga}"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_h6" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardImageLd"
                        style="@style/cardView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/rlSampul"
                        android:layout_alignParentEnd="true"
                        android:layout_marginTop="@dimen/h2"
                        android:layout_marginEnd="@dimen/h2"
                        app:cardCornerRadius="@dimen/h2"
                        app:cardElevation="@dimen/h2">

                        <androidx.appcompat.widget.AppCompatImageView
                            imageBoxSrc="@{viewModel.fotoLembaga}"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@color/gray2"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_camera_white"
                            android:onClick="@{()-> viewModel.clickFoto(viewModel.fotoLembaga)}"
                            />
                    </androidx.cardview.widget.CardView>

                    <include
                        android:id="@+id/progressLd"
                        layout="@layout/progress_loading"
                        visible="@{viewModel.isShowLoading}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/nameLd"
                        android:layout_centerHorizontal="true"
                        android:visibility="gone" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/alamatLd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/progressLd"
                        android:layout_marginStart="@dimen/h2"
                        android:layout_marginTop="@dimen/h2"
                        android:layout_marginBottom="@dimen/h2"
                        android:text="@string/alamat"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_h3" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/almLd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/alamatLd"
                        android:layout_marginStart="@dimen/h2"
                        android:layout_marginEnd="@dimen/h2"
                        android:layout_marginBottom="@dimen/h2"
                        android:text="@={viewModel.alamatLembaga}"
                        android:textSize="@dimen/text_h3" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/kecamatanLd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/almLd"
                        android:layout_marginStart="@dimen/h2"
                        android:layout_marginBottom="@dimen/h2"
                        android:text="@={viewModel.kecamatanLembaga}"
                        android:textSize="@dimen/text_h3" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/kotaLd"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/almLd"
                        android:layout_marginEnd="@dimen/h2"
                        android:layout_marginBottom="@dimen/h2"
                        android:layout_toEndOf="@id/kecamatanLd"
                        android:text="@={viewModel.kotaLembaga}"
                        android:textSize="@dimen/text_h3" />

                    <androidx.appcompat.widget.AppCompatTextView
