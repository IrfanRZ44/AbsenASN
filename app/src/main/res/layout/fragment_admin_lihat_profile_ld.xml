                                android:textSize="@dimen/text_h4" />

                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/h2"
                                android:layout_marginTop="@dimen/h2"
                                android:text="@={viewModel.namaPengurus}"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_h6" />

                            <androidx.appcompat.widget.LinearLayoutCompat
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="20dp"
                                android:orientation="horizontal">

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/kecamatanPm"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="@dimen/h2"
                                    android:layout_marginBottom="@dimen/h2"
                                    android:text="@={viewModel.kecamatanPengurus}"
                                    android:textSize="@dimen/text_h3" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/kotaPm"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@id/alm"
                                    android:layout_marginEnd="@dimen/h2"
                                    android:layout_marginBottom="@dimen/h2"
                                    android:text="@={viewModel.kotaPengurus}"
                                    android:textSize="@dimen/text_h3" />
                            </androidx.appcompat.widget.LinearLayoutCompat>

                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/ProVPm"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/h2"
                                android:layout_marginEnd="@dimen/h2"
                                android:layout_marginBottom="20dp"
                                android:text="@={viewModel.provinsiPengurus}"
                                android:textSize="@dimen/text_h3" />
                        </androidx.appcompat.widget.LinearLayoutCompat>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>

