                android:layout_height="wrap_content">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/h2"
                    app:cardCornerRadius="@dimen/h1"
                    app:cardElevation="@dimen/h2">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <androidx.constraintlayout.widget.ConstraintLayout
                            android:id="@+id/rlSampul"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <com.santalu.autoviewpager.AutoViewPager
                                android:id="@+id/viewPagerPj"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_250"
                                android:overScrollMode="never"
                                android:src="@drawable/ic_camera_white"
                                app:avp_autoScroll="false"
                                app:avp_indeterminate="false"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintLeft_toLeftOf="parent"
                                />

                            <com.tbuonomo.viewpagerdotsindicator.DotsIndicator
                                android:id="@+id/dotsIndicatorPj"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                app:dotsColor="@color/white"
                                app:dotsStrokeColor="@color/white"
                                app:selectedDotColor="@color/colorAccent"
                                app:dotsCornerRadius="@dimen/h2"
                                app:dotsSize="@dimen/h4"
                                app:dotsSpacing="@dimen/h1"
                                app:dotsStrokeWidth="2dp"
                                app:layout_constraintLeft_toLeftOf="parent"
                                app:layout_constraintRight_toRightOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:layout_marginBottom="@dimen/h2" />
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/namePj"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/rlSampul"
                            android:layout_toStartOf="@+id/cardImageLd"
                            android:layout_marginStart="@dimen/h2"
                            android:layout_marginTop="@dimen/h2"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_h6"
                            android:text="@={viewModel.namaMasjid}"
                            />

                        <androidx.cardview.widget.CardView
                            style="@style/cardView"
                            android:layout_below="@id/rlSampul"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="@dimen/h2"
                            android:layout_marginTop="@dimen/h2"
                            android:id="@+id/cardImageLd"
                            app:cardCornerRadius="@dimen/h2"
                            app:cardElevation="@dimen/h2"
                            >
                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/gray2"
                                android:src="@drawable/ic_camera_white"
                                imageBoxSrc="@{viewModel.fotoMasjid}"
                                android:scaleType="centerCrop"
                                android:onClick="@{()-> viewModel.clickFoto(viewModel.fotoMasjid)}"
                                />
                        </androidx.cardview.widget.CardView>

                        <include layout="@layout/progress_loading"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            visible="@{viewModel.isShowLoading}"
                            android:id="@+id/progressPj"
                            android:layout_below="@+id/namePj"
                            android:visibility="gone"
                            />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/alamatLd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/progressPj"
                            android:layout_marginStart="@dimen/h2"
                            android:layout_marginTop="@dimen/h4"
                            android:layout_marginBottom="@dimen/h2"
                            android:text="@string/alamat"
                            android:textColor="@color/black"
                            android:textSize="@dimen/text_h3" />

                        <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/almPj"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
