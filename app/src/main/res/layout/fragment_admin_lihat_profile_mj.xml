                                android:onClick="@{()-> viewModel.clickFoto(viewModel.fotoPengurus)}"
                                />
                        </androidx.cardview.widget.CardView>
                        <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:id="@+id/ly"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_toStartOf="@+id/rlImage"
                            >
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/h2"
                                android:layout_marginTop="@dimen/h4"
                                android:text="@string/pengurus"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_h4" />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/h2"
                                android:layout_marginTop="@dimen/h2"
                                android:text="@={viewModel.namaPengurus}"
                                android:textColor="@color/black"
                                android:textSize="@dimen/text_h6" />
                            <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/kecamatanPj"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/h2"
                                android:layout_marginTop="@dimen/h5"
                                android:layout_marginBottom="@dimen/h2"
                                android:textSize="@dimen/text_h3"
                                android:text="@={viewModel.noHpPengurus}"
                                />
                        </androidx.appcompat.widget.LinearLayoutCompat>

