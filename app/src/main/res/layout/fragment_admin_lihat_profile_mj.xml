        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100"
            style="@style/Theme.MaterialComponents"
            android:theme="@style/Theme.MaterialComponents"
            android:layout_alignParentBottom="true"
            >
            <com.google.android.material.bottomappbar.BottomAppBar
                android:id="@+id/bottomApp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                app:fabAlignmentMode="center"
                android:backgroundTint="@color/colorPrimary"
                app:fabCradleMargin="@dimen/h2"
                app:fabCradleRoundedCornerRadius="@dimen/h2"
                app:fabCradleVerticalOffset="@dimen/h2"
                app:buttonGravity="center_vertical"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >
                    <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_horizontal"
                        >
                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.25"
                            app:layout_anchor="@id/bottomApp"
                            app:srcCompat="@drawable/ic_phone_white"
                            app:fabSize="normal"
                            app:backgroundTint="@color/colorPrimary"
                            app:tint="@color/white"
                            app:elevation="0dp"
                            android:elevation="0dp"
                            app:rippleColor="@color/colorPrimary"
                            android:onClick="@{()-> viewModel.onClickPhone()}"
                            />
                        <View
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="0.5"
                            />
                        <com.google.android.material.floatingactionbutton.FloatingActionButton
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.25"
                            app:layout_anchor="@id/bottomApp"
                            app:srcCompat="@drawable/ic_location_white"
                            app:fabSize="normal"
                            app:backgroundTint="@color/colorPrimary"
                            app:tint="@color/white"
                            app:elevation="0dp"
                            android:elevation="0dp"
                            app:rippleColor="@color/colorPrimary"
                            android:onClick="@{()-> viewModel.onClickNavigasi()}"
                            />
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </RelativeLayout>
            </com.google.android.material.bottomappbar.BottomAppBar>

